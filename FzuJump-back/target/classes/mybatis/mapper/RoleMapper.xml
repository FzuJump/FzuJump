<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.Ambition.mapper.RoleMapper">

    <!--定义Role的resultMap-->
    <resultMap id="RolePermissionMap" type="com.Ambition.pojo.Role">
        <id property="id" column="id"></id>
        <result property="rolename" column="rolename"></result>
        <!--配置权限集合的映射-->
        <collection property="permissions" ofType="com.Ambition.pojo.Permission">
            <id property="id" column="Pid"></id>
            <result property="code" column="code"></result>
            <result property="permissionName" column="permissionName"></result>
        </collection>
    </resultMap>
    <!--查询所有-->
    <select id="GetAllRole" resultMap="RolePermissionMap">
        /*根据角色找权限*/
        SELECT r.*,p.id AS Pid,p.code AS code,p.permissionName AS permissionName FROM fzujump.role r
                                                                left JOIN fzujump.role_permission rp ON r.id=rp.roleId
                                                                left JOIN fzujump.permission p ON p.id=rp.permissionId
    </select>

    <select id="GetRoleBy" parameterType="String" resultType="com.Ambition.pojo.Role">
        select * from fzujump.role
        <where>
            <if test="rolename != null">
                AND rolename = #{rolename}
            </if>

            <if test="id != null ">
                AND id = #{id}
            </if>
        </where>
    </select>

    <insert id="insertRole" parameterType="com.Ambition.pojo.Role">
        insert into fzujump.role(rolename)  VALUES (#{rolename});
    </insert>

    <update id="updateRole" parameterType="com.Ambition.pojo.Role">
        UPDATE fzujump.role
        <trim prefix="set" suffixOverrides=",">
            <if test="rolename!=null"> rolename=#{rolename},</if>
        </trim>
        WHERE id=#{id};
    </update>

    <delete id="deleteRole">
        delete from fzujump.role where id = #{id}
    </delete>

    <select id="showAllRole" resultType="com.Ambition.pojo.Role">
        select * from fzujump.role
    </select>
</mapper>